{
  "compilerOptions": {
    "rootDirs": ["./src", "./scripts", "./config"],
    "outDir": "./dist",
    "target": "ES2017",
    "module": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "resolveJsonModule": true
  }
}
